<p id="notice"><%= notice %></p>

<h1>Game Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Players</th>
      <th>Next player</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_sessions.each do |game_session| %>
      <tr>
        <td><%= game_session.name %></td>
        <td><%= game_session.players %></td>
        <td><%= game_session.next_player_id %></td>
        <td><%= game_session.finished %></td>
        <td><%= link_to 'Show', game_session %></td>
        <td><%= link_to 'Edit', edit_game_session_path(game_session) %></td>
        <td><%= link_to 'Destroy', game_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

